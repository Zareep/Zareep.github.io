        <script>
            alert("Hi, Welcome to JavaScript World!");
            console.log("ADAAA");

            var a = 1;
            var b = 2;
            console.log("Total : " + a + b);

            function exampleScope() {
                var a = 5; // 'a' is function-scoped
                let b = 10; // 'b' is block-scoped
                    if (true) {
                        var a = 20; // This reassigns the 'a' variable declared above
                        let b = 30; // This creates a new 'b' variable with block scope
                    }

                    console.log(a); // Outputs 20
                    console.log(b); // Outputs 10
                    alert("a : " + a);
                    alert("b : " + b);
            }

            function register() {
                // ask student enter name
                let studentName = prompt("Please Enter Your Name");
                let studentAge = prompt("Enter Your Age");
                let studentPlaceOfBirth = prompt("Place Of Birth");
                let studentIC = prompt("Your Number IC");
                let studentDepartment = prompt("Enter your Department");
                let studentAddress = prompt("Your Address");
                
                if (studentName) {
                    alert("Welcome To The Class " + studentName + "! \n Age : " + studentAge + "\n Place of Birth : " + studentPlaceOfBirth + "\n IC : " + studentIC + "\n Department : " + studentDepartment + "\n Address : " + studentAddress  );
                } else {
                    alert("Please enter your name before proceed");
                }
            }

            function checkLogin () {
                var username = prompt ('Username');
                var password = prompt ('Password');

                if (username == "bon") {
                    alert('User Exists');

                    if (password == "bonbon") {
                        alert('Success Login');
                    } else {
                        alert ('Wrong Password');
                    }
                } else if (username == "admin") {
                    alert ('Admin')
                }
                else {
                    alert ('Error Login');
                }

            }


function checkGrade() {
    let grade = prompt("Enter your grade: "); 

switch (grade) {
        case "A":
            msg = "Excellent!";
            console.log(msg); 
            alert(msg);
            break; 
        case "B":
            msg = "Good!";
            console.log(msg);
            alert(msg); 
            break;
        case "C":
            msg = "Fair!";
            console.log(msg); 
            alert(msg); 
            break; 
        case "D":
            msg = "Poor!";
            console.log(msg);
            alert(msg); 
            break;
        default:
            msg = "Invalid grade!";
            console.log(msg);
            alert(msg); 
            break;
}
}            


function checkNumber() {
    let number = prompt("Please enter number");
    let result = number % 2;
    if (result === 0) {
        alert (number + " is even. ");
    } else {
        alert (number + " is odd. ");
    }
}



